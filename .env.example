# Bitrix24 (OAuth local app)
B24_DOMAIN=b24-gko4ik.bitrix24.ru
B24_CLIENT_ID=local.XXXXXXXXXXXX
B24_CLIENT_SECRET=YYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY
B24_REDIRECT_URI=https://YOUR_PUBLIC_URL/b24/oauth/callback

# OpenLines
B24_LINE_ID=1
B24_HANDLER_SECRET=change-me
# Must be one of codes returned by imconnector.list (e.g. telegrambot, vkgroup, ...)
CONNECTOR_CODE=telegrambot
# Some providers require HASH (see imconnector docs / your portal settings)
B24_CONNECTOR_HASH=

# Bitrix imbot (echo testing inside Bitrix)
B24_IMBOT_CODE=openlines_test_bot
B24_IMBOT_NAME=OpenLines Test Bot
# Must be reachable from Bitrix (public URL)
B24_IMBOT_EVENT_HANDLER=https://YOUR_PUBLIC_URL/b24/imbot/events

# Telegram
TG_BOT_TOKEN=123456:ABCDEF

# Telegram polling
TG_USE_POLLING=1
TG_POLL_INTERVAL_S=1.0

# Redis
REDIS_URL=redis://redis:6379/0

# HTTP
HTTP_TIMEOUT_S=10
HTTP_RETRIES=3
